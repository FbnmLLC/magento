<layout version="0.1.0">
<_123pay_processing_failure>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="_123pay/failure" name="_123pay_failure" template="_123pay/failure.phtml">
        </block>
    </reference>
</_123pay_processing_failure>
<_123pay_processing_redirect>
    <reference name="root">
        <action method="setTemplate"><template>_123pay/blank.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="_123pay/redirect" name="_123pay_redirect" template="_123pay/redirect.phtml" />
    </reference>
</_123pay_processing_redirect>
</layout>
