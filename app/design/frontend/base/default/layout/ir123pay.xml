<layout version="0.1.0">
<ir123pay_processing_failure>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="ir123pay/failure" name="ir123pay_failure" template="ir123pay/failure.phtml">
        </block>
    </reference>
</ir123pay_processing_failure>
<ir123pay_processing_redirect>
    <reference name="root">
        <action method="setTemplate"><template>ir123pay/blank.phtml</template></action>
    </reference>
    <reference name="content">
        <block type="ir123pay/redirect" name="ir123pay_redirect" template="ir123pay/redirect.phtml" />
    </reference>
</ir123pay_processing_redirect>
</layout>
